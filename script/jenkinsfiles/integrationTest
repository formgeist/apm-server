              environment name: 'Python_Test', value: 'true' 
            }
            steps {
              script {
                stepIntegrationTest("Python ${APM_AGENT_PYTHON_PKG}", "python")
              }
            }
          }
          stage('Ruby') { 
            agent { label 'linux' }
            when { 
              beforeAgent true
              environment name: 'Ruby_Test', value: 'true' 
            }
            steps {
              script {
                stepIntegrationTest("Ruby ${APM_AGENT_RUBY_PKG}", "ruby")
              }
            }
          }
          stage('Server') { 
            agent { label 'linux' }
            when { 
              beforeAgent true
              environment name: 'Server_Test', value: 'true' 
            }
            steps {
              echo "Start"
              script {
                stepIntegrationTest("Server", "server")
              }
            }
          }
      /**
        run all integration test with the commit version.
