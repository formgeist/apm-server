              environment name: 'Java_Test', value: 'true' 
            }
            steps {
              script {
                stepIntegrationTest("Java ${APM_AGENT_JAVA_PKG}", "java")
              }
            }  
          }
          stage('Kibana') { 
            agent { label 'linux' }
            when { 
              beforeAgent true
              environment name: 'Kibana_Test', value: 'true' 
            }
            steps {
              script {
                stepIntegrationTest("Kibana", "kibana")
              }
            }
          }
          stage('Node.js') { 
            agent { label 'linux' }
            when { 
              beforeAgent true
              environment name: 'NodeJS_Test', value: 'true' 
            }
            steps {
              script {
                stepIntegrationTest("Node.js ${APM_AGENT_NODEJS_PKG}", "nodejs")
              }
            }
          }
          stage('Python') { 
            agent { label 'linux' }
            when { 
